<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="LinkedinClone.Views.PostModal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LinkedinClone.Views"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:LinkedinClone.ViewModels"
    x:DataType="viewmodel:PostModalViewModel"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Size="400,500"
    VerticalOptions="End">

    <ContentView>
        <StackLayout>
            <Label
                HorizontalOptions="Center"
                Text="{Binding Title}"
                VerticalOptions="Center" />
            <Button
                Margin="0,15"
                x:DataType="viewmodel:PostModalViewModel"
                Background="BlueViolet"
                Command="{Binding HandleCloseCommand}"
                CommandParameter="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType={x:Type toolkit:Popup}}}"
                Text="Close"
                WidthRequest="200" />
        </StackLayout>
    </ContentView>

</toolkit:Popup>